{
  "name": "@blakgeek/cancellable-promise",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "https://github.com/blakgeek/cancellable-promise",
  "description": "A functional cancellable promise implementation.",
  "files": [
    "dist",
    "src"
  ],

  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
